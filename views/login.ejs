<%- include("templates/header") %>
<section class="vh-100 zamnBackToggle" style="background-color: #eee">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Login</p>

                <form class="mx-1 mx-md-4" action="/loggingin" method="post">

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                      <input name="email" type="email" placeholder="Email" class="form-control" required />
                    </div>
                  </div>

                  <%- include("templates/components/passwordInput") %>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button data-mdb-button-init data-mdb-ripple-init class="btn btn-dark  btn-lg">Sign in</button>
                  </div>
                  <div class="text-center">
                    <br>
                    <p class="authSpan"><a class='link' href="/passwordReset">Forgot password?</a></p>
                    <br>
                    <p class="authSpan">Not a member? <a class='link' href="/signup">Register</a></p>
                  </div>

                  <% if (passChange) { %>
                  <div class="d-flex justify-content-center text-center">
                    <span class="text-success fw-bold">Password has been changed.</span>
                  </div>
                  <% } %>
                </form>
              </div>

              <%- include("templates/footer") %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>